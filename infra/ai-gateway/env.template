# ============================================
# AI Gateway - Unified Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# LiteLLM Configuration
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
LITELLM_MASTER_KEY=sk-your-litellm-master-key
SSL_VERIFY="False"
SSL_CERTIFICATE=
SSL_CERTS_LOCATION=

# ============================================
# Langfuse Database (Postgres)
# ============================================
POSTGRES_USER=langfuse
POSTGRES_PASSWORD=langfuse-secret-password
POSTGRES_DB=langfuse

# ============================================
# Langfuse ClickHouse
# ============================================
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse-secret-password

# ============================================
# Langfuse MinIO (S3-compatible storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio-secret-password

# ============================================
# Langfuse Auth & Security
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Generate with: openssl rand -hex 32
SALT=your-salt-here

# Generate with: openssl rand -hex 32 (must be exactly 64 hex chars = 32 bytes)
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# Langfuse Headless Initialization
# These create the initial org/project/user on first startup
# ============================================
LANGFUSE_INIT_ORG_ID=my-org
LANGFUSE_INIT_ORG_NAME=My Organization
LANGFUSE_INIT_PROJECT_ID=my-project
LANGFUSE_INIT_PROJECT_NAME=AI Gateway Project

# These keys are used by LiteLLM to authenticate with Langfuse
LANGFUSE_INIT_PROJECT_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_INIT_PROJECT_SECRET_KEY=sk-lf-your-secret-key

# Initial admin user
LANGFUSE_INIT_USER_EMAIL=admin@example.com
LANGFUSE_INIT_USER_NAME=Admin
LANGFUSE_INIT_USER_PASSWORD=your-secure-password

